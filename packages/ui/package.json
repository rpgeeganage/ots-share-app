{
  "name": "@ots-share/ui",
  "version": "1.0.0",
  "description": "The User interface app",
  "private": true,
  "main": "build/server/index.js",
  "types": "build/server/index.d.ts",
  "dependencies": {
    "@emotion/react": "11.10.5",
    "@emotion/styled": "11.10.5",
    "@mui/material": "5.11.8",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "13.5.0",
    "@mui/icons-material": "5.11.0",
    "@types/jest": "27.5.2",
    "@types/node": "16.18.12",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@types/crypto-js": "4.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.8.1",
    "react-scripts": "5.0.1",
    "web-vitals": "2.1.4",
    "crypto-js": "4.1.1",
    "@ots-share/common": "1.0.0",
    "bs58": "5.0.0",
    "crypto-random-string": "5.0.0",
    "copy-to-clipboard": "3.3.3"
  },
  "scripts": {
    "prebuild:server": "rm -rf build/server",
    "prebuild:app": "rm -rf build/app",
    "premove:app": "rm -rf build/app && mkdir -p build/app",
    "premove:server": "rm -rf build/server && mkdir -p build/server",
    "postbuild": "npm run move:app && npm run move:server",
    "build:server": "(cd server && tsc)",
    "build:app": "(cd app && react-scripts build)",
    "build": "npm run build:server && npm run build:app",
    "move:app": "cp -r app/build/* build/app",
    "move:server": "cp -r server/build/src/* build/server",
    "start:dev": "(cd app && react-scripts start)",
    "test": "(cd app && react-scripts test)",
    "lint": "eslint --ext ts ./",
    "fix:lint": "npm run lint -- --fix",
    "lint-stage-ts": "eslint --cache --fix",
    "lint-stage-others": "prettier --write"
  }
}
